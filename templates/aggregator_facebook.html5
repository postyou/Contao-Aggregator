    <?php endif; ?>
    <?php if($this->hasImage): ?>
    <figure class="image_container">
		<img src="<?php echo $this->imgUrl; ?>" alt="<?php echo $this->imgAlt; ?>" title="<?php echo $this->imgAlt; ?>">
	</figure>
    <?php endif; ?>
